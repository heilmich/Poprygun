<Window x:Class="Poprygun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poprygun"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800" FontFamily="Comic Sans MS">
    <Window.Resources>
        <local:SellsConverter x:Key="SellsConverter" />
        <local:DiscountConverter x:Key="DiscountConverter" />
        <local:ImageConverter x:Key="ImageConverter"/>
        <Style x:Key="PageLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="7"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43DCFE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBox Name="search_field" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="40" KeyDown="search_field_KeyDown" FontSize="14" VerticalContentAlignment="Center"></TextBox>
        <ComboBox Name="sortCB" SelectionChanged="SortChanged" SelectedIndex="0" Grid.Row="1" Grid.Column="3" Height="40" Margin="20,0,0,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <ComboBoxItem  Content="{Binding SortTitle}"></ComboBoxItem>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox Name="filterCB"  ItemsSource="{Binding agentTypes}" SelectionChanged="FilterChanged" SelectedIndex="0" Grid.Row="1" Grid.Column="4" Height="40" Margin="20,0,0,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <ComboBoxItem Content="{Binding Title}"></ComboBoxItem>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ListView Name="dataList" ItemsSource="{Binding currentList, Mode=OneWay, IsAsync=True}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3"  Background="#F9969E">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    <Setter Property="Margin" Value="5"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:Name="agentTemplate">
                    <Border BorderThickness="1" BorderBrush="Black" Width="Auto" Background="#fff">
                        <Grid Height="80" Margin="10" Width="Auto" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Image, Converter={StaticResource ImageConverter}, IsAsync=True}" Width="100" Grid.Column="0"></Image>
                            <StackPanel Grid.Column="1">
                                <TextBlock Name="TypeName" FontSize="16">
                                    <Run Text="{Binding AgentType.Title, IsAsync=True}"></Run>
                                    <Run Text=" | "></Run>
                                    <Run Text="{Binding Title, IsAsync=True}"></Run>
                                </TextBlock>
                                <TextBlock Text="{Binding ProductSale, Converter={StaticResource SellsConverter}, IsAsync=True}"></TextBlock>
                                <TextBlock Name="Phone" Text="{Binding Phone}"></TextBlock>
                                <TextBlock  Name="Priority">
                                    <Run Text="Приоритетность: "></Run>
                                    <Run Text="{Binding Priority, IsAsync=True}"></Run>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Name="Discount"  Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16">
                                <Run Text="{Binding ProductSale, Converter={StaticResource DiscountConverter}, IsAsync=True}"/>
                                <Run Text="%"/>
                            </TextBlock>
                        </Grid>
                        
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="5" Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
            <TextBlock Name="prevPage" Style="{StaticResource PageLabel}" Text="&lt;" MouseLeftButtonDown="prevPageClick"></TextBlock>
            <StackPanel Name="pageList" Orientation="Horizontal">
                
            </StackPanel>
            <TextBlock Name="nextPage" Style="{StaticResource PageLabel}" Text=">" MouseLeftButtonDown="nextPageClick"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
