<Window x:Class="Poprygun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poprygun"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800" FontFamily="Comic Sans MS">
    <Window.Resources>
        <local:SellsConverter x:Key="SellsConverter" />
        <local:DiscountConverter x:Key="DiscountConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBox Name="search_field" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="40" ></TextBox>
        <ComboBox Name="sortCB" Grid.Row="1" Grid.Column="3" Height="40" Margin="20,0,0,0">
            
        </ComboBox>
        <ComboBox Name="filterCB" Grid.Row="1" Grid.Column="4" Height="40" Margin="20,0,0,0">
            
        </ComboBox>
        <ListView Name="dataList" ItemsSource="{Binding AgentList}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3"  Background="#F9969E">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    <Setter Property="Margin" Value="5"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:Name="agentTemplate">
                    <Border BorderThickness="1" BorderBrush="Black" Width="Auto" Background="#fff">
                        <Grid Height="80" Margin="10" Width="Auto" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Width="100" Grid.Column="0"></Image>
                            <StackPanel Grid.Column="1">
                                <TextBlock Name="TypeName" FontSize="16">
                                    <Run Text="{Binding AgentType.Title}"></Run>
                                    <Run Text=" | "></Run>
                                    <Run Text="{Binding Title}"></Run>
                                </TextBlock>
                                <TextBlock Text="{Binding ProductSale, Converter={StaticResource SellsConverter}}"></TextBlock>
                                <TextBlock Name="Phone" Text="{Binding Phone}"></TextBlock>
                                <TextBlock  Name="Priority">
                                    <Run Text="Приоритетность: "></Run>
                                    <Run Text="{Binding Priority}"></Run>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Name="Discount"  Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16">
                                <Run Text="{Binding ProductSale, Converter={StaticResource DiscountConverter}}"/>
                                <Run Text="%"/>
                            </TextBlock>
                        </Grid>
                        
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
