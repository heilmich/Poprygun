<Window x:Class="Poprygun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poprygun"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBox Name="search_field" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="40" Margin="0,0,20,0"></TextBox>
        <ComboBox Name="sortCB" Grid.Row="1" Grid.Column="3" Height="40" Margin="0,0,20,0">
            
        </ComboBox>
        <ComboBox Name="filterCB" Grid.Row="1" Grid.Column="4" Height="40" Margin="0,0,20,0">
            
        </ComboBox>
        <ListView Name="dataList" ItemsSource="{Binding agents}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Stretch">
                        <StackPanel Height="80" Orientation="Horizontal" Margin="10">
                            <Image Width="100"></Image>
                            <StackPanel>
                                <TextBlock Name="typeName">
                                    <Run Text="{Binding AgentType.Title}"></Run>
                                    <Run Text=" | "></Run>
                                    <Run Text="{Binding Title}"></Run>
                                </TextBlock>
                                <TextBlock Name="sells" Text="{Binding sells}"></TextBlock>
                                <TextBlock Name="phone" Text="{Binding Phone}"></TextBlock>
                                <TextBlock Name="priority" Text="{Binding Priority}"></TextBlock>
                            </StackPanel>
                            <TextBlock Name="percent" Text="{Binding percent}"></TextBlock>
                        </StackPanel>
                        
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
